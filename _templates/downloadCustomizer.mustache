<h1>Customize<span class="pullright">version 1.1.5</span></h1>
<form method="get" action="http://bitbuilder.herokuapp.com/can.custom.js">

  <div class="libraries">
    {{#configuration.libraries}}
    <input type="radio" id="{{id}}" name="configuration" value="{{description}}" {{#isDefault}}checked{{/isDefault}}>
    <label for="{{id}}">{{description}}</label>
    {{/configuration.libraries}}
    
    <span class="pullright">
      <input id="separateFiles" type="checkbox" {{#seperateFiles}}checked{{/seperateFiles}}><label>Separate Files</label>
      <input id="minified" type="checkbox" {{#minified}}checked{{/minified}}><label>Minified</label>
    </span>
  </div>
  
  <table class="options" width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th width="40" align="center" valign="top"><input type="checkbox" class="all" data-type="core"/></th>
      <th colspan="2" align="center" valign="middle"><label for="core">Core</label></th>
    </tr>
    {{#configuration.types.core.modules}}
    <tr>
      <td width="40" align="center" valign="top"><input type="checkbox" id="{{id}}" class="module" name="plugins" value="{{path}}" {{#isDefault}}checked{{/isDefault}} {{data 'module'}}/></td>
      <td width="175" align="left" valign="top"><label for="{{id}}">{{name}}</label></td>
      <td align="left" valign="top">{{description}}</td>
    </tr>
    {{/configuration.types.core.modules}}
    </tr>
  </table>

  <table class="options" width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th width="40" align="center" valign="top"><input type="checkbox"  class="all" data-type="plugin"/></th>
      <th colspan="2" align="center" valign="middle"><label for="plugins">Plugins</label></th>
    </tr>
    {{#configuration.types.plugin.modules}}
    <tr>
      <td width="40" align="center" valign="top"><input type="checkbox" id="{{id}}" class="module" name="plugins" value="{{path}}" {{#isDefault}}checked{{/isDefault}} {{data 'module'}}/></td>
      <td width="175" align="left" valign="top"><label for="{{id}}">{{name}}</label></td>
      <td align="left" valign="top">{{description}}</td>
    </tr>
    {{/configuration.types.plugin.modules}}
    </tr>
  </table>
  
  <br />  
  <button class="color" type="submit">Customize & Download</button>
</form>