<div class="pull-right">
	<ul class="tags">
		<li>{{type}}</li>
	</ul>
	<ul class="links">
		{{#if src}}
			<li><a href="{{sourceUrl src type line}}">source</a></li>
		{{/if}}
		{{#if download}}
			<li><a href="{{downloadUrl download}}">download</a></li>
		{{/if}}
		{{#if test}}
			<li><a href="{{testUrl test}}">tests</a></li>
		{{/if}}
	</ul>
</div>
{{#if title}}
	<h1>{{title}}</h1> {{#if plugin}}<span class="module">{{plugin}}</span>{{/if}}
{{else}}
	<h1>{{{name}}}</h1>
{{/if}}

<span class="inherits">{{#if inherits}}inherits: <a href="{{makeHref inherits}}">{{inherits}}</a>{{else}}&nbsp;{{/if}}</span>
